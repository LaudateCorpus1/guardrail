source 'https://rubygems.org/'
gemspec

if ENV['RAILS'] == '3'
  gem 'activerecord', '~> 3.2.17'
  gem 'railties', '~> 3.2.17'
elsif ENV['RAILS'] == '4.0'
  gem 'activerecord', '~> 4.0.4'
  gem 'railties', '~> 4.0.4'
else
  gem 'activerecord', '~> 4.1.0'
  gem 'railties', '~> 4.1.0'
end
gem "rspec-core", "~> 2.0"
gem "rspec-expectations", "~> 2.0"
gem 'mocha', :require => false
